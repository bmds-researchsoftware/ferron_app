{
  "version": "0.2.0",
  "name": "ferron_app",
  "author": "Eric Carty-Fickes",
  "homepage": "https://cbits.northwestern.edu",
  "private": true,
  "scripts": {
    "build:android:development": "ionic build android --debug",
    "build:android:staging": "STAGE=staging ionic build android --buildConfig ~/.ssh/android-build.json --release",
    "build:android:production": "STAGE=production ionic build android --buildConfig ~/.ssh/android-build.json --release",
    "build:ios:development": "ionic build ios --debug",
    "build:ios:staging": "STAGE=staging ionic build ios --buildConfig ~/.ssh/ios-build.json --release",
    "build:ios:production": "STAGE=production ionic build ios --buildConfig ~/.ssh/ios-build.json --release",
    "build": "ionic-app-scripts build",
    "watch": "ionic-app-scripts watch",
    "serve:before": "watch",
    "emulate:before": "build",
    "deploy:before": "build",
    "build:before": "build",
    "run:before": "build",
    "test": "karma start karma.conf.js",
    "test:ci": "karma start karma-ci.conf.js"
  },
  "dependencies": {
    "ionic-angular": "^2.0.0-rc.0",
    "ionicons": "^3.0.0",
    "@ionic/storage": "^1.0.3",
    "ionic-native": "^2.0.3"
  },
  "devDependencies": {
    "@ionic/app-scripts": "^0.0.23",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "isparta": "^4.0.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "tsify": "^1.0.7",
    "typescript": "^2.0.3",
    "typings": "^1.4.0",
    "watchify": "^3.7.0"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard"
  ],
  "cordovaPlatforms": [
    "ios",
    {
      "platform": "ios",
      "version": "",
      "locator": "ios"
    }
  ],
  "description": "Calm. Cope. Quit.: An Ionic project",
  "config": {
    "ionic_copy": "./config/copy.config.js"
  }
